<odoo>
  <data>
    <record id="mbs_instituto.alumno_tree" model="ir.ui.view">
      <field name="name">Alumnos tree</field>
      <field name="model">mbs_instituto.alumno</field>
      <field name="arch" type="xml">
        <tree string="Alumnos">
          <field name="foto" widget="image" />
          <field name="numEstudiante" />          
          <field name="name" />
          <field name="apellidos" />
          <field name="dni" />
          <field name="fechaNacimiento" />
          <field name="repetidor" optional="hide"/>
          <field name="media" optional="hide"/>
        </tree>
      </field>
    </record>


    <record id="mbs_instituto.alumno_form" model="ir.ui.view">
      <field name="name">Alumnos form</field>
      <field name="model">mbs_instituto.alumno</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <span> 
                <group style="float: right;display: block;">
                  <field name="foto" widget="image" class="oe_avatar" nolabel="1" style="width: 100%"/>
                </group>
              
              <group style="clear: both;">
                <group>  
                  <field name="name" options="{'line_breaks': False}" widget="text" class="text-break" default_focus="1" placeholder="e.g. Lumber Inc"/>     
                  <!--><field name="name" class="text-break"/><!-->
                  <field name="apellidos" />
                  <field name="dni" />
                  <field name="fechaNacimiento" />
                </group>
                <group >
                  <field name="numEstudiante" /> 
                  <field name="repetidor" />
                  <field name="media" />
                  <field name="service_state" />
                </group>
              </group>

            </span>
          </sheet>
        </form>
      </field>
    </record>




    <record id="mbs_instituto.alumno_kanban" model="ir.ui.view">
      <field name="name">Alumnos kanban</field>
      <field name="model">mbs_instituto.alumno</field>
      <field name="arch" type="xml">
        <kanban class="o_kanban_mobile" default_group_by="service_state" group_expand="true">
            <field name="id" />
            <field name="foto" widget="image" class="oe_avatar"/>
            <field name="numEstudiante" />          
            <field name="name" />
            <field name="apellidos" />
            <field name="repetidor" />
            <field name="media" />

          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_global_click">
                <div class="o_kanban_image">
                    <img t-att-src="kanban_image('mbs_instituto.alumno', 'foto', record.id.raw_value)" alt="Image"/>
                </div>
                <div class="oe_kanban_details">
                  <div class="o_kanban_record_top">
                    <div class="o_kanban_record_headings">
                      <strong class="o_kanban_record_title oe_partener_heading">
                        <p><field name="name" /> <field name="apellidos" /></p>
                      </strong>

                      <ul>
                        <li><field name="numEstudiante" /></li>
                        <div>
                          Repetidor: 
                          <t t-if="record.repetidor.raw_value">
                            <span>SÃ­</span>
                          </t>
                          <t t-else="">
                            <span>No</span>
                          </t>
                        </div>
                        <li><field name="media" /></li>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>
    
  </data>
</odoo>
